extends layout

block content
    h1 Create New Medicine
    form(method='POST', action='http://localhost:3000/api/medicine/updateM/' + medicine._id)
        #form-group
            label name
            input.form-control(name='name', type='text', value=medicine.name)
        #form-group
            label price
            input.form-control(name='price', type='number', value=medicine.price)
        input.btn.btn-primary(type='submit', value='submit')